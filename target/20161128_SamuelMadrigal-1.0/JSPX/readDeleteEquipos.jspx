<?xml version="1.0" encoding="UTF-8"?>
<jsp:root   xmlns:jsp="http://java.sun.com/JSP/Page"
            xmlns:c="http://java.sun.com/jsp/jstl/core"
            version="2.1">
    <jsp:directive.page contentType="text/html; charset=UTF-8" />
    <jsp:directive.page isELIgnored="false" />
    <jsp:output omit-xml-declaration="false"
                doctype-root-element="html"
                doctype-public="-//W3C//DTD XHTML 1.1//EN"
                doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml11.dtd" />
    <html>
        <c:set var="contexto" value="${pageContext.request.contextPath}"/>
        <head>
            <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
            <title>READ Equipos</title>
            <link rel="stylesheet" href="${contexto}/css/estilo.css" type="text/css"/>
        </head>
        <body>
            <div id="contPrin">
                <div id="contSecu">
                    <h2>Lista de Equipos</h2>
                    <form action="${contexto}/deleteEquipos" method="post">
                        <div id="elementos">
                            <c:forEach var="equipo" items="${lista}">
                                <p class="p">
                                    <span><c:out value="${equipo.idEquipo}"/></span><br/>
                                    <c:out value="${equipo.marca}"/><br/>
                                    <c:out value="${equipo.numSerie}"/><br/>
                                    <input type="checkbox" name="id" value="${equipo.idEquipo}"/>
                                </p>
                            </c:forEach>
                        </div>
                        <input type="submit" id="eliminar" name="eliminar" value="Eliminar Registro/s"/>
                    </form>
                    <p><a class="menu" href="${contexto}/JSPX/crudEquipos.jspx">Men&amp;uacute; equipos</a></p>
                    <p><a class="menu" href="${contexto}/index.jspx">Men&amp;uacute; inicial</a></p>
                </div>
                <jsp:include page="/JSP_INCLUDES/pie.jsp"/>
            </div>
        </body>
    </html>
</jsp:root>
